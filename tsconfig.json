{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/server/declarations"],
    "baseUrl": ".",
    "paths": {
      "@errors": ["src/server/errors"],
      "@errors/*": ["src/server/errors/*"],
      "@services/*": ["src/server/services/*"],
      "@server/*": ["src/server/*"],
      "@logger": ["src/server/services/logger"],
      "@logger/*": ["src/server/services/logger/*"]
    }
  },
   "include": [
    "src/server/**/*"
  ],
  "ts-node": {
    "esm": false,
    "files": true 
  }
}