{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@errors": ["src/server/errors"],
      "@errors/*": ["src/server/errors/*"],
      "@services/*": ["src/server/services/*"],
      "@server/*": ["src/server/*"],
      "@logger": ["src/server/services/logger"],
      "@logger/*": ["src/server/services/logger/*"]
    }
  },
  "ts-node": {
    "esm": false
  }
}